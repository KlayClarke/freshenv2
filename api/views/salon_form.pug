extends layout 
block content 
  .salon-create-content-wrapper 
    .salon-create-content-container 
      form(action="#" method='')
        .form-section 
          label(for="name") Name 
          br
          input(type="text" id='name')
          br
        .form-section 
          label(for="type") Type 
          br
          select#type(name="type")
            option(value="" disabled) 
            option(value="Hybrid") Hybrid 
            option(value="Barbershop") Barbershop 
            option(value="Salon") Salon 
          br
        .form-section 
          label(for="average_price") Average Price 
          br
          input(type="number" id='average_price' min=0)
          br
        .form-section 
          label(for="image") Image URL 
          br
          input(type="text" id='image')
          br
        .form-section 
          label(for="street_address") Street Address 
          br
          input(type="text" id='street_address')
          br
        .form-section
          label(for="city") City 
          br
          input(type="text" id='city') 
          br
        .form-section 
          label(for="state") State 
          br
          input(type="text" id='state')
          br
        .form-section 
          label(for="zip_code") Zip Code 
          br
          input(type="text" id='zip_code')
          br
        button(class='button button-s button-success border-radius-4px') Create Salon  
